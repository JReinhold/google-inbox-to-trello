{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist/js",
		"noEmitOnError": true,
		"lib": ["es6", "dom"],
		"allowJs": true,
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": true,
		"typeRoots": ["node_modules/@types", "node_modules/web-ext-types"]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
	]
}
