{
	"name": "webextension-google-inbox-to-trello",
	"version": "0.0.1",
	"description": "WebExtension to create Trello cards from mails in Google Inbox",
	"main": "index.js",
	"scripts": {
		"clean-build": "rm -rf ./build/* && mkdir -p ./build",
		"prebuild": "yarn clean-build",
		"build": "webpack",
		"dev": "webpack -w",
		"lint": "tslint 'src/**/*.{ts,tsx}'",
		"format": "prettier --write \"{./*.{ts,js,json},src/**/*.{js,ts,tsx}}\"",
		"typecheck": "tsc --noEmit",
		"ok": "yarn typecheck && yarn lint",
		"precommit": "lint-staged",
		"postcommit": "git reset"
	},
	"author": "Jeppe Reinhold",
	"license": "MIT",
	"dependencies": {
		"arrive": "^2.4.1"
	},
	"devDependencies": {
		"@types/chrome": "~0.0.47",
		"copy-webpack-plugin": "^4.3.1",
		"husky": "^0.14.3",
		"imports-loader": "^0.7.1",
		"lint-staged": "^6.0.0",
		"prettier": "^1.9.2",
		"ts-loader": "~3.2.0",
		"tslint": "^5.8.0",
		"tslint-react": "^3.3.3",
		"typescript": "~2.6.2",
		"web-ext-types": "^2.0.1",
		"webpack": "~3.10.0"
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true,
		"printWidth": 100
	},
	"lint-staged": {
		"{./*.{ts,js,json},src/**/*.{js,ts,tsx}}": [
			"prettier --write",
			"git add"
		]
	}
}
